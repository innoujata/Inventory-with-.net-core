@model inventory.Models.assets

    <form method="post" asp-action="Create">
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-info pl-3">Add Assets</h2>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Condition"></label>
                </div>
                <div class="col-4">
                    <!--<input asp-for="Condition" class="form-control" />-->
                    <select asp-for="Condition" class="browser-default custom-select">
                        <option selected>Open this select menu</option>
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Need Repair">Need Repair</option>
                    </select>
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-4 offset-4 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Create" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">Back</a>
                    </div>
                </div>
            </div>
        </div>
       
    </form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/>}
}